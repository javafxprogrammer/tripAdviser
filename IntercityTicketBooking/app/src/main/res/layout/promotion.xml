<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Promotion"
        android:textColor="@color/darkGray"
        android:textSize="24sp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/detailsParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/lightGray">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/detailsChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Details"
            android:inputType="textMultiLine"
            android:textColor="@color/lightGray"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ticketCountParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/lightGray">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/ticketCountChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ticket Count"
            android:inputType="number"
            android:textColor="@color/lightGray"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/discountParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/lightGray">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/discountChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discount"
            android:inputType="numberDecimal"
            android:textColor="@color/lightGray"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>